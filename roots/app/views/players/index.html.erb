<h1>Players</h1>

<%= link_to 'Home', "/" %>&nbsp;&nbsp;&nbsp;<%= link_to 'Create New Player', new_player_path %>
<br/>
<br/>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Age</th>
      <th>City</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.username %></td>
        <td><%= player.name %></td>
        <td><%= player.age %></td>
        <td><%= player.city %></td>
        <td><%= player.country %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @players %></p>
