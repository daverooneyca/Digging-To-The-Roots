<!DOCTYPE html>
<html>
<head lang="en">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

    <!-- meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- end meta -->

    <!-- fav icons -->
    <link rel=icon href="assets/icons/fav60.jpg"  sizes="60x60"   type="image/jpg">
    <link rel=icon href="assets/icons/fav76.jpg"  sizes="76x76"   type="image/jpg">
    <link rel=icon href="assets/icons/fav120.jpg" sizes="120x120" type="image/jpg">
    <link rel=icon href="assets/icons/fav192.jpg" sizes="192x192" type="image/jpg">
    <!-- end fav icons -->

    <link href='http://fonts.googleapis.com/css?family=Raleway:400,900,700,200,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:900italic' rel='stylesheet' type='text/css'>

    <!-- Latest compiled and minified CSS for Bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <!-- Optional theme for Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

    <!-- animate.css library -->
    <link rel="stylesheet" href="assets/animate.css">

    <!-- font awesome library -->
    <link rel="stylesheet" href="assets/font-awesome/css/font-awesome.min.css">

    <!-- stroke gap icons library -->
    <link rel="stylesheet" href="assets/Stroke-Gap-Icons-Webfont/style.css">

    <!-- bootstrap slider library -->
    <link rel="stylesheet" href="assets/bootstrap-slider/css/slider.css">

    <!-- the audio player style -->
    <link rel="stylesheet" href="assets/softlightweb-audio.css">
    <!-- the theme style -->
    <link rel="stylesheet" href="assets/style.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <title>The Survival Guide for Brand New ScrumMasters</title>

</head>
<body>

    <div class="anim-wrapper">
        <!-- main menu section -->
        <section class="main-menu">

            <div class="container">
                <nav class="navbar navbar-default wow fadeInDown">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <div class="navbar-brand no-padding">
                                <div class="row vert-center no-padding">
                                    <div class="icon col-md-2 col-xs-2 ">
                                        <i class="fa fa-file-text-o"></i>
                                    </div>
                                    <div class="title col-md-10 col-xs-10 ">
                                        <h1>The Survival Guide for Brand New ScrumMasters</h1>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="#home-carousel">Home</a></li>
                                <li><a href="#overview">Overview</a></li>
                                <li><a href="#testimonials">Testimonials</a></li>
                                <li><a href="#author">Author</a></li>
                                <li><a href="#contact">Contact</a></li>
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>


            </div>
        </section>
        <!-- end main menu section -->

        <%= yield %>

    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="assets/jquery-1.11.3.min.js" ></script>
    <!-- Latest compiled and minified JavaScript for Bootstrap-->
    <script src="assets/bootstrap/js/bootstrap.min.js" ></script>

    <!-- jquery helper for vertical centering on all browsers-->
    <script src="assets/jQuery-Flex-Vertical-Center/jquery.flexverticalcenter.js"></script>
    <!-- jquery nice scroll effect -->
    <script src="assets/jquery.nicescroll.min.js"></script>
    <!-- the WOW animation library-->
    <script src="assets/WOW/dist/wow.min.js"></script>
    <!-- bootstrap slider library -->
    <script src="assets/bootstrap-slider/js/bootstrap-slider.js"></script>
    <!-- audio player library -->
    <script src="assets/player.js"></script>

    <!-- main js file -->
    <script src="assets/main.js"></script>
</body>
</html>
